datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id           String        @id @default(uuid())
  email        String        @unique
  password     String
  role         Role          @default(USER)
  status       Status        @default(ACTIVE)
  optInAI      Boolean       @default(false)
  aiRiskLevel  String?       // "LOW", "MEDIUM", "HIGH"
  aiMaxStake   Decimal?      @db.Decimal(20, 8)
  aiDailyLimit Decimal?      @db.Decimal(20, 8)
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
  
  wallet       Wallet?
  transactions Transaction[]
  trades       Trade[]
  binaryTrades BinaryTrade[]
}

model Wallet {
  id        String   @id @default(uuid())
  userId    String   @unique
  balance   Decimal  @default(0) @db.Decimal(20, 8)
  locked    Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Transaction {
  id        String    @id @default(uuid())
  userId    String
  type      TxType
  amount    Decimal   @db.Decimal(20, 8)
  status    TxStatus  @default(PENDING)
  metadata  Json?
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  
  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@index([userId])
  @@index([status])
}

model Admin {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  active    Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Trade {
  id        String      @id @default(uuid())
  userId    String
  symbol    String
  type      String      // "LONG" or "SHORT"
  amount    Decimal     @db.Decimal(20, 8)
  entry     Decimal     @db.Decimal(20, 8)
  exit      Decimal?    @db.Decimal(20, 8)
  status    TradeStatus @default(OPEN)
  pnl       Decimal?    @db.Decimal(20, 8)
  createdAt DateTime    @default(now())
  closedAt  DateTime?
  
  user      User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@index([userId])
  @@index([status])
}

model BinaryTrade {
  id        String   @id @default(uuid())
  userId    String
  symbol    String
  direction String   // "UP" or "DOWN"
  stake     Decimal  @db.Decimal(20, 8)
  entry     Decimal  @db.Decimal(20, 8)
  expiry    DateTime
  exit      Decimal? @db.Decimal(20, 8)
  result    String?  // "WIN" or "LOSS"
  payout    Decimal? @db.Decimal(20, 8)
  createdAt DateTime @default(now())
  resolvedAt DateTime?
  
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@index([userId])
  @@index([expiry])
  @@index([result])
}

model AuditLog {
  id        String   @id @default(uuid())
  actorId   String
  actorRole String
  action    String
  target    String?
  metadata  Json?
  createdAt DateTime @default(now())
  
  @@index([actorId])
  @@index([createdAt])
}

enum Role {
  USER
  ADMIN
  MASTER
}

enum Status {
  ACTIVE
  FROZEN
  SUSPENDED
}

enum TxType {
  DEPOSIT
  WITHDRAWAL
  CREDIT
  DEBIT
  TRANSFER
}

enum TxStatus {
  PENDING
  PROCESSING
  APPROVED
  REJECTED
  COMPLETED
  FAILED
}

enum TradeStatus {
  OPEN
  CLOSED
  FORCE_CLOSED
}
