# Production Environment Variables
# File: .env.production
# Copy this to backend/.env and fill in real values

# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# CRITICAL: NEVER COMMIT THIS FILE WITH REAL VALUES
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━

# Application Environment
NODE_ENV=production
PORT=3000

# Database Configuration
# PostgreSQL connection string
DATABASE_URL=postgresql://onchainweb_user:CHANGE_THIS_PASSWORD@localhost:5432/onchainweb_prod

# JWT Authentication
# Generate with: openssl rand -base64 64
JWT_SECRET=CHANGE_THIS_TO_RANDOM_64_CHAR_STRING
JWT_EXPIRY=12h

# CORS Configuration
# Production domain (no trailing slash)
CORS_ORIGIN=https://onchainweb.app

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100  # Max 100 requests per window

# Session Configuration
SESSION_SECRET=CHANGE_THIS_TO_RANDOM_STRING
SESSION_COOKIE_SECURE=true   # HTTPS only
SESSION_COOKIE_HTTPONLY=true
SESSION_COOKIE_MAXAGE=86400000  # 24 hours

# Binary Options Configuration
BINARY_PAYOUT_RATE=0.85  # 85% payout on win
BINARY_MIN_STAKE=1       # $1 minimum
BINARY_MAX_STAKE=10000   # $10,000 maximum

# Trading Configuration
TRADE_MIN_AMOUNT=10      # $10 minimum
TRADE_MAX_AMOUNT=100000  # $100,000 maximum
TRADE_MAX_LEVERAGE=10    # 10x max leverage

# AI Arbitrage Configuration
AI_MAX_TRADES_PER_DAY=50
AI_MAX_AMOUNT_PER_TRADE=1000
AI_MIN_CONFIDENCE=0.8    # 80% minimum confidence

# Transaction Limits
WITHDRAWAL_MIN=10
WITHDRAWAL_MAX=50000
WITHDRAWAL_DAILY_LIMIT=100000
DEPOSIT_MIN=10
DEPOSIT_MAX=100000

# Market Data Configuration
# Real market data provider API keys
BINANCE_API_KEY=your_binance_api_key_here
BINANCE_API_SECRET=your_binance_secret_here
COINBASE_API_KEY=your_coinbase_api_key_here
COINBASE_API_SECRET=your_coinbase_secret_here

# Notification Configuration (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=noreply@onchainweb.app
SMTP_PASSWORD=your_smtp_password
EMAIL_FROM=noreply@onchainweb.app

# Monitoring & Logging
LOG_LEVEL=info           # error, warn, info, debug
SENTRY_DSN=              # Sentry error tracking (optional)
DATADOG_API_KEY=         # DataDog monitoring (optional)

# Backup Configuration
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=        # AWS S3 bucket for backups (optional)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1

# Security Configuration
BCRYPT_ROUNDS=12         # Password hashing rounds
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION=900000  # 15 minutes in ms

# Feature Flags
ENABLE_AI_ARBITRAGE=true
ENABLE_BINARY_OPTIONS=true
ENABLE_LONG_SHORT_TRADING=true
MAINTENANCE_MODE=false

# Admin Configuration
MASTER_EMAIL=master@onchainweb.app
MASTER_INITIAL_PASSWORD=CHANGE_THIS_IMMEDIATELY

# WebSocket Configuration
SOCKET_IO_PATH=/socket.io
SOCKET_IO_PING_TIMEOUT=60000
SOCKET_IO_PING_INTERVAL=25000

# Cache Configuration (Redis - Optional)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Performance Configuration
MAX_REQUEST_SIZE=10mb
REQUEST_TIMEOUT=30000    # 30 seconds

# Audit Log Retention
AUDIT_LOG_RETENTION_DAYS=365  # Keep logs for 1 year

