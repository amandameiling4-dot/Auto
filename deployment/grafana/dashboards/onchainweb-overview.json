{
    "dashboard": {
        "title": "OnChainWeb Platform Overview",
        "tags": [
            "onchainweb",
            "production"
        ],
        "timezone": "browser",
        "panels": [
            {
                "id": 1,
                "title": "HTTP Requests per Second",
                "type": "graph",
                "targets": [
                    {
                        "expr": "rate(http_requests_total[5m])",
                        "legendFormat": "{{method}} {{route}}"
                    }
                ],
                "gridPos": {
                    "h": 8,
                    "w": 12,
                    "x": 0,
                    "y": 0
                }
            },
            {
                "id": 2,
                "title": "API Response Time (95th percentile)",
                "type": "graph",
                "targets": [
                    {
                        "expr": "histogram_quantile(0.95, rate(http_request_duration_seconds_bucket[5m]))",
                        "legendFormat": "p95"
                    }
                ],
                "gridPos": {
                    "h": 8,
                    "w": 12,
                    "x": 12,
                    "y": 0
                }
            },
            {
                "id": 3,
                "title": "Active WebSocket Connections",
                "type": "stat",
                "targets": [
                    {
                        "expr": "sum(websocket_connections_active)",
                        "legendFormat": "Total"
                    }
                ],
                "gridPos": {
                    "h": 4,
                    "w": 6,
                    "x": 0,
                    "y": 8
                }
            },
            {
                "id": 4,
                "title": "Open Trades",
                "type": "stat",
                "targets": [
                    {
                        "expr": "trades_open_count",
                        "legendFormat": "Count"
                    }
                ],
                "gridPos": {
                    "h": 4,
                    "w": 6,
                    "x": 6,
                    "y": 8
                }
            },
            {
                "id": 5,
                "title": "Total Wallet Balance",
                "type": "stat",
                "targets": [
                    {
                        "expr": "wallet_balance_total",
                        "legendFormat": "Balance"
                    }
                ],
                "gridPos": {
                    "h": 4,
                    "w": 6,
                    "x": 12,
                    "y": 8
                }
            },
            {
                "id": 6,
                "title": "Failed Login Attempts",
                "type": "stat",
                "targets": [
                    {
                        "expr": "rate(failed_login_attempts_total[5m])",
                        "legendFormat": "Rate"
                    }
                ],
                "gridPos": {
                    "h": 4,
                    "w": 6,
                    "x": 18,
                    "y": 8
                }
            },
            {
                "id": 7,
                "title": "Trades per Minute",
                "type": "graph",
                "targets": [
                    {
                        "expr": "rate(trade_operations_total[1m]) * 60",
                        "legendFormat": "{{type}}"
                    }
                ],
                "gridPos": {
                    "h": 8,
                    "w": 12,
                    "x": 0,
                    "y": 12
                }
            },
            {
                "id": 8,
                "title": "Admin Actions",
                "type": "graph",
                "targets": [
                    {
                        "expr": "rate(admin_actions_total[5m])",
                        "legendFormat": "{{action}}"
                    }
                ],
                "gridPos": {
                    "h": 8,
                    "w": 12,
                    "x": 12,
                    "y": 12
                }
            },
            {
                "id": 9,
                "title": "Error Rate",
                "type": "graph",
                "targets": [
                    {
                        "expr": "rate(http_requests_total{status=~\"5..\"}[5m])",
                        "legendFormat": "5xx Errors"
                    },
                    {
                        "expr": "rate(http_requests_total{status=~\"4..\"}[5m])",
                        "legendFormat": "4xx Errors"
                    }
                ],
                "gridPos": {
                    "h": 8,
                    "w": 12,
                    "x": 0,
                    "y": 20
                }
            },
            {
                "id": 10,
                "title": "System Resources",
                "type": "graph",
                "targets": [
                    {
                        "expr": "100 - (avg(rate(node_cpu_seconds_total{mode=\"idle\"}[5m])) * 100)",
                        "legendFormat": "CPU %"
                    },
                    {
                        "expr": "(node_memory_MemTotal_bytes - node_memory_MemAvailable_bytes) / node_memory_MemTotal_bytes * 100",
                        "legendFormat": "Memory %"
                    }
                ],
                "gridPos": {
                    "h": 8,
                    "w": 12,
                    "x": 12,
                    "y": 20
                }
            }
        ],
        "schemaVersion": 16,
        "version": 0
    }
}